<div style="max-width: 600px; margin: 2rem auto; padding: 2rem; border: 1px solid #ddd; border-radius: 8px; font-family: sans-serif;">
  <div style="display: flex; gap: 15px; margin-bottom: 20px;">
    <% if @post.user.profile_image.attached? %>
      <%= image_tag @post.user.profile_image, style: "width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" %>
    <% end %>
    <div>
      <strong><%= @post.user.nickname.presence || @post.user.email %></strong>
      <p><%= @post.content %></p>
      <% if @post.image.attached? %>
        <%= image_tag @post.image, style: "max-width: 100%; border-radius: 8px;" %>
      <% end %>
    </div>
  </div>

  <hr>

  <h3>コメント (<%= @post.comments.count %>)</h3>
  <% @post.comments.each do |comment| %>
    <div style="padding: 10px; border-bottom: 1px solid #eee;">
      <strong><%= comment.user.nickname.presence || comment.user.email %></strong>
      <p style="margin: 5px 0;"><%= comment.content %></p>
      <small style="color: #999;"><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></small>
    </div>
  <% end %>

  <div style="margin-top: 20px;">
    <%= form_with model: [@post, Comment.new], local: true do |f| %>
      <%= f.text_area :content, placeholder: "コメントを書く...", style: "width: 100%; height: 60px; padding: 10px; border-radius: 4px; border: 1px solid #ccc;" %>
      <div style="text-align: right; margin-top: 10px;">
        <%= f.submit "コメントする", style: "background-color: #28a745; color: white; border: none; padding: 5px 15px; border-radius: 4px; cursor: pointer;" %>
      </div>
    <% end %>
  </div>

  <%= link_to "戻る", root_path, style: "display: block; margin-top: 20px; color: #666;" %>
</div>