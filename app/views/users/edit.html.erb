<div style="max-width: 600px; margin: 2rem auto; padding: 2rem; border: 1px solid #ddd; border-radius: 8px;">
  <h2>プロフィール編集</h2>

  <%= form_with model: @user, local: true do |f| %>
    <div style="margin-bottom: 1rem;">
      <%= f.label :profile_image, "プロフィール写真" %><br>
      <%= f.file_field :profile_image %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= f.label :nickname, "ニックネーム" %><br>
      <%= f.text_field :nickname, style: "width: 100%; padding: 8px;" %>
    </div>

    <div style="margin-bottom: 1rem;">
      <%= f.label :introduction, "自己紹介文" %><br>
      <%= f.text_area :introduction, rows: 5, style: "width: 100%; padding: 8px;" %>
    </div>

    <%= f.submit "保存する", style: "padding: 10px 20px; background-color: #007bff; color: white; border: none; cursor: pointer;" %>
  <% end %>
</div>